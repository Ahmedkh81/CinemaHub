@model Cinema

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="border p-3 rounded bg-light">
                <h6 class="text-muted">Logo Info</h6>
                <p>@Model.CinemaLogo</p>
            </div>
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Location:</strong> @Model.Location</p>

            <h4 class="mt-4">Movies in this cinema:</h4>
            <ul class="list-group">
                @foreach (var movie in Model.Movies)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @movie.Name
                        <a href="/Customer/Details/Index/@movie.Id" class="btn btn-sm btn-outline-info">🎬 View Movie</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>